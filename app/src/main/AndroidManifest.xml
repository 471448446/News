<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="better.news">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permisson.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name="better.news.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- android:theme="@style/AppTheme.TransparentNoActionBar" -->
        <activity
            android:name="better.news.ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="better.news.ui.MainActivity"
            android:theme="@style/AppTheme.TransparentNoActionBar">

        </activity>
        <activity android:name="better.news.ui.common.DealActivity" />
        <activity android:name="better.news.ui.days.DaysDetailActivity" />
        <activity android:name="better.news.ui.science.ScienceDetailsActivity" />
        <activity android:name="better.news.ui.read.BookDetailActivity" />
        <activity android:name="better.news.ui.read.ReadBookActivity" />
        <activity
            android:name="better.news.ui.setting.SettingActivity"
            android:theme="@style/style_setting" />

    </application>

</manifest>
