<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/dialog_simple_title" />

    <EditText
        android:id="@+id/dialog_search_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/border_space_max"
        android:background="@null"
        android:textColor="@color/textColorPrimary"
        android:hint="@string/str_hint_book_name"
        android:paddingLeft="@dimen/border_space_max"
        android:paddingRight="@dimen/border_space_max"
        android:paddingTop="@dimen/border_space_sec" />

    <include layout="@layout/dialog_simple_btn_two" />
</LinearLayout>
