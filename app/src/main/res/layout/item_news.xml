<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_space_sec"
        android:background="@color/colorListDividerSimple" />

    <LinearLayout style="@style/style_custom_card_lay">

        <TextView
            android:id="@+id/item_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/border_space_sec"
            android:text="@string/str_test_txt"
            android:textColor="?attr/textColorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_news_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/border_space_sec"
            android:text="@string/str_test_txt"
            android:textColor="@color/textColorSecond"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/str_test_txt"
                android:textColor="@color/textColorThird"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/item_news_check_collect"
                style="@style/CustomCollectTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/item_news_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_test_txt"
                android:textColor="@color/colorGray"
                android:textSize="20dp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    <View
        style="@style/horizontalDivision"/>
</LinearLayout>